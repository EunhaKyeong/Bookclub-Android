<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.book_profile.ReadingStyleFragment">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reading_style_title"
        android:textColor="@color/main_blue"
        android:textSize="21.6dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/style_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.8dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv">

        <RadioButton
            android:id="@+id/style_rb1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/reading_style_rb_selector"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:text="독서 시간이 정해져 있는 계획파"
            android:textColor="@drawable/reading_style_text_selector"
            android:textSize="16.8dp" />

        <RadioButton
            android:id="@+id/style_rb2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16.8dp"
            android:background="@drawable/reading_style_rb_selector"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:text="자투리 시간에 책을 읽는 틈틈이파"
            android:textColor="@drawable/reading_style_text_selector"
            android:textSize="16.8dp" />

        <RadioButton
            android:id="@+id/style_rb3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16.8dp"
            android:background="@drawable/reading_style_rb_selector"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:text="열심히 기록하며 보는 끄적파"
            android:textColor="@drawable/reading_style_text_selector"
            android:textSize="16.8dp" />

        <RadioButton
            android:id="@+id/style_rb4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16.8dp"
            android:background="@drawable/reading_style_rb_selector"
            android:button="@null"
            android:paddingHorizontal="12dp"
            android:textColor="@drawable/reading_style_text_selector"
            android:textSize="16.8dp" />

    </RadioGroup>

    <EditText
        android:id="@+id/style_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16.8dp"
        android:background="@color/transparent"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="@string/self_reading_style_hint"
        android:maxLength="20"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey12"
        android:textSize="16.8dp"
        app:layout_constraintBottom_toBottomOf="@+id/style_rg"/>

</androidx.constraintlayout.widget.ConstraintLayout>