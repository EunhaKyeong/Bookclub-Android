<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/checklist_view"
        android:layout_width="match_parent"
        android:layout_height="28.8dp"
        android:layout_marginHorizontal="19.2dp"
        android:layout_marginVertical="6dp"
        android:background="@drawable/checklist_item_background_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="13.2dp"
        android:src="@drawable/checklist_unenabled_icon"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintStart_toStartOf="@+id/checklist_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />

    <EditText
        android:id="@+id/checklist_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16.8dp"
        android:background="@color/transparent"
        android:hint="@string/write_checklist"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey14"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_iv"
        app:layout_constraintEnd_toEndOf="@+id/checklist_view"
        app:layout_constraintStart_toEndOf="@+id/check_iv"
        app:layout_constraintTop_toTopOf="@+id/check_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>