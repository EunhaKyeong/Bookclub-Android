<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.write.RecordSettingFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="0dp">

                <TextView
                    android:id="@+id/tab_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/writing_setting"
                    android:textColor="@color/main_blue"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/complete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="19dp"
                    android:text="@string/complete"
                    android:textColor="@color/main_blue"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:id="@+id/back_iv_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_iv"
        app:layout_constraintEnd_toEndOf="@id/back_iv"
        app:layout_constraintStart_toStartOf="@+id/back_iv"
        app:layout_constraintTop_toTopOf="@+id/back_iv" />

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="7dp"
        android:layout_height="9dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/coordinateLayout"
        app:layout_constraintStart_toStartOf="@+id/coordinateLayout"
        app:layout_constraintTop_toTopOf="@+id/coordinateLayout" />

    <View
        android:id="@+id/full_screen_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout" />

    <View
        android:id="@+id/read_where_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/writing_setting_view"
        app:layout_constraintBottom_toTopOf="@+id/read_time_view"
        app:layout_constraintTop_toTopOf="@+id/full_screen_view" />

    <TextView
        android:id="@+id/read_where_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/read_where"
        android:textColor="@color/main_blue"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/read_where_view"
        app:layout_constraintTop_toTopOf="@+id/read_where_view" />

    <EditText
        android:id="@+id/read_where_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/writing_setting_et"
        android:hint="@string/read_where_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="28dp"
        android:paddingEnd="10dp"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/read_where_view"
        app:layout_constraintStart_toStartOf="@+id/read_where_view"
        app:layout_constraintTop_toBottomOf="@+id/read_where_tv" />

    <ImageView
        android:id="@+id/location_icon_iv"
        android:layout_width="10dp"
        android:layout_height="12dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/read_where_et"
        app:layout_constraintStart_toStartOf="@+id/read_where_et"
        app:layout_constraintTop_toTopOf="@+id/read_where_et" />

    <View
        android:id="@+id/read_time_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/writing_setting_view"
        app:layout_constraintBottom_toTopOf="@+id/link_view"
        app:layout_constraintTop_toBottomOf="@+id/read_where_view" />

    <TextView
        android:id="@+id/read_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/read_time"
        android:textColor="@color/main_blue"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/read_time_view"
        app:layout_constraintTop_toTopOf="@+id/read_time_view" />

    <EditText
        android:id="@+id/read_time_et"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/writing_setting_et"
        android:hint="@string/read_time_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="28dp"
        android:paddingEnd="10dp"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/read_time_view"
        app:layout_constraintStart_toStartOf="@+id/read_time_view"
        app:layout_constraintTop_toBottomOf="@+id/read_time_tv" />

    <ImageView
        android:id="@+id/watch_icon_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintBottom_toBottomOf="@+id/read_time_et"
        app:layout_constraintStart_toStartOf="@+id/read_time_et"
        app:layout_constraintTop_toTopOf="@+id/read_time_et" />

    <View
        android:id="@+id/link_view"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/writing_setting_view"
        app:layout_constraintBottom_toTopOf="@+id/public_setting_view"
        app:layout_constraintTop_toBottomOf="@+id/read_time_view" />

    <TextView
        android:id="@+id/link_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/link"
        android:textColor="@color/main_blue"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/link_view"
        app:layout_constraintTop_toTopOf="@+id/link_view" />

    <View
        android:id="@+id/link_et_view"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/writing_setting_et"
        app:layout_constraintEnd_toEndOf="@+id/link_view"
        app:layout_constraintStart_toStartOf="@+id/link_view"
        app:layout_constraintTop_toBottomOf="@+id/link_tv" />

    <ImageView
        android:id="@+id/link_icon_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_link"
        app:layout_constraintEnd_toStartOf="@+id/link_title_et"
        app:layout_constraintStart_toStartOf="@+id/link_et_view"
        app:layout_constraintTop_toTopOf="@+id/link_et_view" />

    <EditText
        android:id="@+id/link_title_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="4dp"
        android:background="@color/transparent"
        android:hint="@string/link_title_hint"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/link_et_view"
        app:layout_constraintStart_toEndOf="@+id/link_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/link_et_view" />

    <View
        android:id="@+id/link_et_line_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey13"
        app:layout_constraintEnd_toEndOf="@+id/link_title_et"
        app:layout_constraintStart_toStartOf="@+id/link_title_et"
        app:layout_constraintTop_toBottomOf="@+id/link_title_et" />

    <EditText
        android:id="@+id/link_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:background="@color/transparent"
        android:gravity="start"
        android:hint="@string/link_hint"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/link_et_view"
        app:layout_constraintEnd_toEndOf="@+id/link_et_line_view"
        app:layout_constraintStart_toStartOf="@+id/link_et_line_view"
        app:layout_constraintTop_toBottomOf="@+id/link_et_line_view" />

    <View
        android:id="@+id/public_setting_view"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="13.2dp"
        android:background="@drawable/writing_setting_public_scope_setting_view"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link_view" />

    <TextView
        android:id="@+id/public_setting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.2dp"
        android:layout_marginTop="14.4dp"
        android:text="@string/public_setting"
        android:textColor="@color/white"
        android:textSize="14.4dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/public_setting_view"
        app:layout_constraintTop_toTopOf="@+id/public_setting_view" />

</androidx.constraintlayout.widget.ConstraintLayout>