<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_fragment"
    tools:context=".view.dialog.InviteCompleteDialogFragment">

    <ImageView
        android:id="@+id/invite_complete_iv"
        android:layout_width="46dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toTopOf="@+id/invite_complete_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/invite_complete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="hi06021님께\n초대장이 전송되었습니다."
        android:textAppearance="@style/ta_b_16_kr"
        app:layout_constraintBottom_toTopOf="@+id/invite_complete_desc_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_complete_iv" />

    <TextView
        android:id="@+id/invite_complete_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/msg_invite_mem_desc"
        android:textAppearance="@style/ta_r_12_kr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_complete_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>