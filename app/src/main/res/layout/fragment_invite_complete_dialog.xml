<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_fragment"
    tools:context=".view.dialog.InviteCompleteDialogFragment">

    <ImageView
        android:id="@+id/invite_complete_iv"
        android:layout_width="143dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_congratulation_character_color"
        app:layout_constraintBottom_toTopOf="@+id/invite_complete_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/invite_complete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="@string/msg_send_invite_message"
        android:textAppearance="@style/ta_b_16_kr"
        app:layout_constraintBottom_toTopOf="@+id/invite_complete_desc_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_complete_iv" />

    <TextView
        android:id="@+id/invite_complete_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_invite_mem_desc"
        android:textAppearance="@style/ta_r_12_kr"
        app:layout_constraintBottom_toTopOf="@+id/invite_complete_line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_complete_tv" />

    <View
        android:id="@+id/invite_complete_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_dark"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/invite_complete_complete_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/action_complete"
        android:textAppearance="@style/ta_r_14_kr"
        app:layout_constraintTop_toBottomOf="@+id/invite_complete_line_view"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>