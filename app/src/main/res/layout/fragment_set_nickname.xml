<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".view.book_profile.SetNicknameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/select_profile_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_profile_image"
            android:textColor="@color/main_blue"
            android:textSize="21.6sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginTop="32.4dp"
            android:src="@drawable/no_profile_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_profile_image_tv" />

        <View
            android:id="@+id/add_profile_iv_view"
            android:layout_width="28.8dp"
            android:layout_height="28.8dp"
            android:background="@drawable/circle_main_blue"
            app:layout_constraintBottom_toBottomOf="@+id/profile_iv"
            app:layout_constraintEnd_toEndOf="@+id/profile_iv" />

        <ImageView
            android:id="@+id/plus_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="@+id/add_profile_iv_view"
            app:layout_constraintEnd_toEndOf="@+id/add_profile_iv_view"
            app:layout_constraintStart_toStartOf="@+id/add_profile_iv_view"
            app:layout_constraintTop_toTopOf="@+id/add_profile_iv_view" />

        <TextView
            android:id="@+id/your_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76.8dp"
            android:text="@string/set_nickname_title"
            android:textColor="@color/main_blue"
            android:textSize="21.6sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_iv" />

        <EditText
            android:id="@+id/nickname_et"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16.8dp"
            android:background="@drawable/login_book_profile_et"
            android:hint="@string/content_hint"
            android:maxLength="10"
            android:paddingHorizontal="12dp"
            android:textColor="@color/main_blue"
            android:textColorHint="@color/grey12"
            android:textSize="16.8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_nickname_tv" />

        <TextView
            android:id="@+id/nickname_condition_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4.8dp"
            android:text="@string/set_nickname_info"
            android:textColor="@color/light_red"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nickname_et" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>