<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="182dp">

    <ImageView
        android:id="@+id/invite_history_profile_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/bg_default_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invite_history_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="클럽장 닉네임"
        android:textAppearance="@style/ta_b_15_kr"
        app:layout_constraintStart_toEndOf="@+id/invite_history_profile_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invite_history_bookclub_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="북클럽 이름"
        android:textAppearance="@style/ta_r_13_kr"
        android:textColor="@color/grey_dark"
        app:layout_constraintStart_toEndOf="@+id/invite_history_profile_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invite_history_invite_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="35dp"
        android:text="2021/01/12 12:34"
        android:textAppearance="@style/ta_r_13_kr"
        android:textColor="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invite_history_message_tv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/bg_grey_10_null_null"
        android:lineSpacingExtra="4dp"
        android:padding="10dp"
        android:text="our page에서 함께 책 읽자!"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/invite_history_reject_btn"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_grey_10_null_null"
        android:stateListAnimator="@null"
        android:text="@string/action_reject"
        android:textAppearance="@style/ta_r_14_kr"
        android:textColor="@color/grey_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/invite_history_accept_btn"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_secondary_10_null_null"
        android:stateListAnimator="@null"
        android:text="@string/action_accept"
        android:textAppearance="@style/ta_r_14_kr"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>