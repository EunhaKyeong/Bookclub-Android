<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.write.RecordFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/record_en"
                    android:textColor="@color/main_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/record_upload_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="19dp"
                    android:src="@drawable/record_upload_icon" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/selectBookBtn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:text="@string/book_select"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24_white"
        app:iconGravity="end"
        app:layout_constraintBottom_toTopOf="@+id/memoTopicRG"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout" />

    <TextView
        android:id="@+id/selected_book_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selected_book_tv"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:paddingBottom="4dp"
        android:textColor="@color/main_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/memoTopicRG"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout" />

    <RadioGroup
        android:id="@+id/memoTopicRG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectBookBtn">

        <RadioButton
            android:id="@+id/memoRB"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/state_check_border_round_blue_white"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="@string/memo_en"
            android:textColor="@drawable/record_memo_topic_selector_text"
            android:textSize="10sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/topicRB"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/state_check_border_round_blue_white"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="@string/topic_en"
            android:textColor="@drawable/record_memo_topic_selector_text"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RadioGroup>

    <!--<TextView
        android:id="@+id/memo_topic_desc_tv"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:gravity="right|top"
        android:text="@string/memo_topic_desc"
        android:textColor="@color/red"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/memoTopicRG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/memoTopicRG" />-->

    <View
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoTopicRG"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/photo_icon"
        app:layout_constraintEnd_toEndOf="@+id/add_img_view"
        app:layout_constraintStart_toStartOf="@+id/add_img_view"
        app:layout_constraintTop_toTopOf="@+id/add_img_view" />

    <View
        android:id="@+id/add_img_view"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_img_view"
        app:layout_constraintEnd_toStartOf="@+id/record_img_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/record_view" />

    <TextView
        android:id="@+id/img_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp"
        android:text="0"
        android:textColor="@color/red2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintEnd_toStartOf="@+id/img_total_cnt_tv"
        app:layout_constraintStart_toStartOf="@+id/add_img_view" />

    <TextView
        android:id="@+id/img_total_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:text="/4"
        android:textColor="@color/red2"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintEnd_toEndOf="@+id/add_img_view"
        app:layout_constraintStart_toEndOf="@+id/img_cnt_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/record_img_rv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintStart_toEndOf="@+id/add_img_view"
        app:layout_constraintTop_toTopOf="@+id/add_img_view" />

    <View
        android:id="@+id/record_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey12"
        app:layout_constraintTop_toBottomOf="@+id/add_img_view" />

    <EditText
        android:id="@+id/postTitleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/transparent"
        android:hint="@string/title_hint"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/record_line_view" />

    <EditText
        android:id="@+id/contentET"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="14dp"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:hint="@string/content_hint"
        android:scrollbars="vertical"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTitleET" />
