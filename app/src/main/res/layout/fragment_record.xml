<?xml version="1.0" encoding="utf-8"?>
<!--fragment_record.xml add_img_view-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.write.RecordFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/record_en"
                    android:textColor="@color/main_blue"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/next_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="19dp"
                    android:text="@string/next"
                    android:textColor="@color/main_blue"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/selectBook_btn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="22dp"
        android:drawableRight="@drawable/ic_next_white"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:paddingTop="6dp"
        android:text="@string/book_select"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:iconGravity="end"
        app:layout_constraintBottom_toTopOf="@+id/record_view"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout" />

    <View
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectBook_btn"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="@+id/add_img_view"
        app:layout_constraintStart_toStartOf="@+id/add_img_view"
        app:layout_constraintTop_toTopOf="@+id/add_img_view" />

    <View
        android:id="@+id/add_img_view"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_img_view"
        app:layout_constraintEnd_toStartOf="@+id/record_img_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/record_view" />

    <TextView
        android:id="@+id/img_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="0"
        android:textColor="@color/light_red"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintEnd_toStartOf="@+id/img_line_tv"
        app:layout_constraintStart_toStartOf="@+id/add_img_view" />

    <TextView
        android:id="@+id/img_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textColor="@color/light_red"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintEnd_toStartOf="@+id/img_total_cnt_tv"
        app:layout_constraintStart_toEndOf="@+id/img_cnt_tv" />

    <TextView
        android:id="@+id/img_total_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="4"
        android:textColor="@color/light_red"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintEnd_toEndOf="@+id/add_img_view"
        app:layout_constraintStart_toEndOf="@+id/img_line_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/record_img_rv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@+id/add_img_view"
        app:layout_constraintStart_toEndOf="@+id/add_img_view"
        app:layout_constraintTop_toTopOf="@+id/add_img_view"
        tools:listitem="@layout/item_record_img" />

    <View
        android:id="@+id/record_line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey12"
        app:layout_constraintTop_toBottomOf="@+id/add_img_view" />

    <EditText
        android:id="@+id/postTitleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="23dp"
        android:background="@android:color/transparent"
        android:hint="@string/title_hint"
        android:maxLength="20"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/record_line_view" />

    <EditText
        android:id="@+id/contentET"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="23dp"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:hint="@string/content_hint"
        android:maxLength="3000"
        android:scrollbars="vertical"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTitleET" />

</androidx.constraintlayout.widget.ConstraintLayout>