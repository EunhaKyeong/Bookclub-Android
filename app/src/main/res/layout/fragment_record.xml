<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.write.RecordFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            app:liftOnScroll="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/recording"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/postTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="19dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@string/posting"
                    android:textColor="@color/main_blue"
                    android:textSize="16sp" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/selectBookBtn"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="left|center"
        android:paddingLeft="15dp"
        android:text="@string/book_select"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_baseline_arrow_forward_ios_24_white"
        app:iconGravity="end"
        app:layout_constraintTop_toBottomOf="@+id/coordinateLayout" />

    <RadioGroup
        android:id="@+id/memoTopicRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/selectBookBtn">

        <RadioButton
            android:id="@+id/memoRB"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/state_check_border_round_blue_white"
            android:button="@null"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/memo"
            android:textColor="@drawable/state_checked_text_white_black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/topicRB"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/state_check_border_round_blue_white"
            android:button="@null"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/topic"
            android:textColor="@drawable/state_checked_text_white_black"
            android:textSize="12sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoTopicRG">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="23dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_bold"
            android:hint="@string/title_hint"
            android:textColor="@color/grey7"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="14dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:hint="@string/content_hint"
            android:textColor="@color/grey7"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>