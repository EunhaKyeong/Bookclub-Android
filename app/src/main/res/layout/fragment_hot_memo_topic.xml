<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.bookclub.HotMemoTopicFragment">

    <TextView
        android:id="@+id/memo_topic_title_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:gravity="start|center"
        android:textColor="@color/main_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/line_view1"
        app:layout_constraintEnd_toStartOf="@+id/book_title_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_title_tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:gravity="end|center"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/memo_topic_title_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memo_topic_title_tv1"
        app:layout_constraintTop_toTopOf="@+id/memo_topic_title_tv1" />

    <View
        android:id="@+id/line_view1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_topic_title_tv1" />

    <TextView
        android:id="@+id/memo_topic_title_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:gravity="start|center"
        android:textColor="@color/main_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/book_title_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view1" />

    <TextView
        android:id="@+id/book_title_tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:gravity="end|center"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/memo_topic_title_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memo_topic_title_tv2"
        app:layout_constraintTop_toTopOf="@+id/memo_topic_title_tv2" />

    <View
        android:id="@+id/line_view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_topic_title_tv2" />

    <TextView
        android:id="@+id/memo_topic_title_tv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:gravity="start|center"
        android:textColor="@color/main_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/book_title_tv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view2" />

    <TextView
        android:id="@+id/book_title_tv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:gravity="end|center"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/memo_topic_title_tv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memo_topic_title_tv3"
        app:layout_constraintTop_toTopOf="@+id/memo_topic_title_tv3" />

    <View
        android:id="@+id/line_view3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_topic_title_tv3" />

</androidx.constraintlayout.widget.ConstraintLayout>