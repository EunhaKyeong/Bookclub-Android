<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookClubCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.bookclub.BookClubFragment">

    <!--<androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_book_club_xml_constraintlayout_scene">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/main_blue"
                    android:elevation="0dp"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/bookclub_menu">

                    <TextView
                        android:id="@+id/clubNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="13dp"
                        android:text="북클럽 A"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </com.google.android.material.appbar.MaterialToolbar>

                <LinearLayout
                    android:id="@+id/book_club_desc_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:paddingHorizontal="22dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="57dp">

                    <Button
                        android:id="@+id/levelBtn"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:text="1단계"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="0.5dp" />

                    <TextView
                        android:id="@+id/descriptionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:text="한줄소개"
                        android:textColor="@color/white"
                        android:textSize="13dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/memberProfileLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/member_add_iv"
                            android:layout_width="34dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/bookclub_member_add_iv"
                            android:scaleType="center"
                            android:src="@drawable/plus"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv6"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv5"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/club_member_profile_iv1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/club_member_profile_iv1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/image_view_circle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="219dp"
            android:background="@drawable/top_round"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hotContentsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/hot_memo_topic_tab"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/hot_memo_topic_vp"
                    app:layout_constraintTop_toTopOf="@+id/hotContentsLayout"
                    app:tabIndicatorColor="@color/main_blue"
                    app:tabRippleColor="@null"
                    app:tabSelectedTextColor="@color/main_blue"
                    app:tabTextAppearance="@style/hot_memo_topic_tab_text"
                    app:tabTextColor="@color/grey12" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/hot_memo_topic_vp"
                    android:layout_width="match_parent"
                    android:layout_height="124.5dp"
                    app:layout_constraintBottom_toTopOf="@+id/gatherRecordsTextView"
                    app:layout_constraintTop_toBottomOf="@+id/hot_memo_topic_tab" />

                <TextView
                    android:id="@+id/gatherRecordsTextView"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="44dp"
                    android:gravity="center"
                    android:paddingHorizontal="11dp"
                    android:paddingBottom="8dp"
                    android:text="@string/gather_records"
                    android:textColor="@color/main_blue"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hot_memo_topic_vp" />

                <View
                    android:id="@+id/blueDivider"
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/main_blue"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/greyDivider"
                    app:layout_constraintTop_toBottomOf="@+id/gatherRecordsTextView" />

                <View
                    android:id="@+id/greyDivider"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/grey4"
                    app:layout_constraintLeft_toRightOf="@+id/blueDivider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gatherRecordsTextView" />

                <CheckBox
                    android:id="@+id/searchButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:drawableEnd="@drawable/filter_checkbox_drawable_end"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/search"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/filter_contents_layout"
                    app:layout_constraintEnd_toStartOf="@+id/clubMemberButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blueDivider" />

                <CheckBox
                    android:id="@+id/clubMemberButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/club_members"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/searchButton"
                    app:layout_constraintEnd_toStartOf="@+id/sortButton"
                    app:layout_constraintStart_toEndOf="@+id/searchButton"
                    app:layout_constraintTop_toTopOf="@+id/searchButton" />

                <CheckBox
                    android:id="@+id/sortButton"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/sort"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/clubMemberButton"
                    app:layout_constraintStart_toEndOf="@+id/clubMemberButton"
                    app:layout_constraintTop_toTopOf="@+id/clubMemberButton" />

                <LinearLayout
                    android:id="@+id/filter_contents_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:paddingHorizontal="20dp"
                    android:background="@color/grey5"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/book_club_book_rv"
                    app:layout_constraintTop_toBottomOf="@+id/searchButton">

                    <include
                        android:id="@+id/search_layout"
                        layout="@layout/fragment_search"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/book_club_filter_layout"
                        layout="@layout/fragment_book_club_filter"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/sort_filter_layout"
                        layout="@layout/fragment_sort_filter"
                        android:visibility="gone" />

                    <!--<FrameLayout
                        android:id="@+id/book_filter_frame_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp" />-->

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/book_club_book_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey5"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filter_contents_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--</androidx.constraintlayout.motion.widget.MotionLayout>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>