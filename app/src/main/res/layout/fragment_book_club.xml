<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookClubCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BookClubFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_book_club_xml_constraintlayout_scene">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="219dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/main_blue"
                    android:elevation="0dp"
                    app:layout_collapseMode="pin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:text="북클럽 A"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                </com.google.android.material.appbar.MaterialToolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:paddingHorizontal="22dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="60dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/nestedscroll_border"
            android:paddingTop="20dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hotContentsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/hotContents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/hotMemoContents"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/hotMemoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bookclub_toggle_selector"
                        android:button="@null"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:paddingBottom="8dp"
                        android:text="@string/hot_memo"
                        android:textColor="@drawable/state_checked_text_blue_white"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/hotTopicButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bookclub_toggle_selector"
                        android:button="@null"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:paddingBottom="8dp"
                        android:text="@string/hot_topic"
                        android:textColor="@drawable/state_checked_text_blue_white"
                        android:textSize="15sp" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/hotMemoContents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/hotTopicContents"
                    app:layout_constraintTop_toBottomOf="@+id/hotContents">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hotTopicContents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@+id/hotMemoContents"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hotContents">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:enabled="false"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="right|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:enabled="false"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="right|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_border_grey4_05"
                        android:enabled="false"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="right|center"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="15dp"
                        android:text="메모 제목"
                        android:textColor="@drawable/hot_contents_enabled_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gatherRecordsTextView"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="44dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingHorizontal="11dp"
                    android:paddingBottom="8dp"
                    android:text="@string/gather_records"
                    android:textColor="@color/main_blue"
                    android:textSize="15sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hotMemoContents" />

                <View
                    android:id="@+id/blueDivider"
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/main_blue"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/greyDivider"
                    app:layout_constraintTop_toBottomOf="@+id/gatherRecordsTextView" />

                <View
                    android:id="@+id/greyDivider"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/grey4"
                    app:layout_constraintLeft_toRightOf="@+id/blueDivider"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/gatherRecordsTextView" />

                <CheckBox
                    android:id="@+id/searchButton"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/filter_checkbox"
                    android:button="@null"
                    android:drawableEnd="@drawable/filter_checkbox_drawable_end"
                    android:drawablePadding="0dp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/search"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/clubMemberButton"
                    app:layout_constraintTop_toBottomOf="@+id/blueDivider" />

                <CheckBox
                    android:id="@+id/clubMemberButton"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/filter_checkbox"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/club_members"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@+id/searchButton"
                    app:layout_constraintRight_toLeftOf="@+id/sortButton"
                    app:layout_constraintTop_toBottomOf="@+id/blueDivider" />

                <CheckBox
                    android:id="@+id/sortButton"
                    android:layout_width="55dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/filter_checkbox"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/sort"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toRightOf="@+id/clubMemberButton"
                    app:layout_constraintTop_toBottomOf="@+id/blueDivider" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/grey5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchButton" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>