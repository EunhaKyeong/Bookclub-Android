<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.write.AddBookBottomSheetFragment">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/book_option"
        android:textColor="@color/main_blue"
        android:textSize="21.6dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/readTypeRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.2dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleTV">

        <RadioButton
            android:id="@+id/readingRB"
            android:layout_width="111.6dp"
            android:layout_height="36dp"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:paddingTop="7.2dp"
            android:text="@string/reading"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="14.4dp" />

        <RadioButton
            android:id="@+id/readCompleteRB"
            android:layout_width="111.6dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="9.6dp"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingTop="7.2dp"
            android:text="@string/read_complete"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="14.4dp" />

        <RadioButton
            android:id="@+id/wantToReadRB"
            android:layout_width="111.6dp"
            android:layout_height="36dp"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingTop="7.2dp"
            android:text="@string/want_to_read"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="14.4dp" />

    </RadioGroup>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="355.2dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.6dp"
        android:layout_marginBottom="32.4dp"
        android:gravity="center_horizontal"
        android:paddingTop="9.6dp"
        android:stateListAnimator="@null"
        android:text="@string/add_book"
        android:textColor="@color/main_blue"
        android:textSize="16.8dp"
        android:textStyle="bold"
        app:backgroundTint="@color/grey4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readTypeRG" />

</androidx.constraintlayout.widget.ConstraintLayout>