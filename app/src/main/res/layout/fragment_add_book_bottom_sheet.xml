<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.library.AddBookBottomSheetFragment">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/book_option"
        android:textColor="@color/main_blue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/readTypeRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleTV">

        <RadioButton
            android:id="@+id/readingRB"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:text="@string/reading"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/readCompleteRB"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:text="@string/read_complete"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/wantToReadRB"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/state_check_border_round_blue_grey1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:paddingTop="6dp"
            android:text="@string/want_to_read"
            android:textColor="@drawable/state_checked_text_white_grey1"
            android:textSize="12dp" />

    </RadioGroup>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="27dp"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:stateListAnimator="@null"
        android:text="@string/add_book"
        android:textColor="@color/main_blue"
        android:textSize="14dp"
        android:textStyle="bold"
        app:backgroundTint="@color/grey4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readTypeRG" />

</androidx.constraintlayout.widget.ConstraintLayout>