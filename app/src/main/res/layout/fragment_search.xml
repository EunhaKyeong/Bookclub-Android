<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/searchBookET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/search_book_et"
        android:hint="@string/book_search"
        android:paddingVertical="7.2dp"
        android:paddingStart="32.4dp"
        android:paddingEnd="15.6dp"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/main_blue"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/search_filter_icon"
        app:layout_constraintBottom_toBottomOf="@+id/searchBookET"
        app:layout_constraintStart_toStartOf="@+id/searchBookET"
        app:layout_constraintTop_toTopOf="@+id/searchBookET" />

</androidx.constraintlayout.widget.ConstraintLayout>