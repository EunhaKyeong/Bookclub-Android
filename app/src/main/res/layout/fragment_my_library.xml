<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyLibraryFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <com.google.android.material.appbar.MaterialToolbar
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="0dp"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/ic_baseline_more_vert_36"
                app:navigationIconTint="@color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/my_library"
                    android:textColor="@color/black"
                    android:textSize="19sp" />
            </com.google.android.material.appbar.MaterialToolbar>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/readTypeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:tabIndicatorColor="@color/main_blue"
                app:tabSelectedTextColor="@color/main_blue"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/grey2"
                android:orientation="vertical" />

            <RadioGroup
                android:id="@+id/filterRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/searchButton"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    android:background="@drawable/selector_filter1"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:text="@string/search"
                    android:textColor="@drawable/selector_filter_text"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/clubButton"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_filter1"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:text="@string/book_club_kr"
                    android:textColor="@drawable/selector_filter_text"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/sortButton"
                    android:layout_width="65dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_filter1"
                    android:button="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:text="@string/sort"
                    android:textColor="@drawable/selector_filter_text"
                    android:textSize="12sp" />
            </RadioGroup>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/filterLayout"
            android:background="@color/grey5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="22dp"
            android:paddingRight="20dp"
            android:visibility="gone" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="@color/grey5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>