<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyLibraryFragment"
    android:animateLayoutChanges="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    android:elevation="0dp"
                    app:menu="@menu/top_app_bar">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/my_library"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </com.google.android.material.appbar.MaterialToolbar>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/readTypeTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    app:tabIndicatorColor="@color/main_blue"
                    app:tabSelectedTextColor="@color/main_blue"
                    app:tabTextAppearance="@style/tab_text"
                    app:tabTextColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/grey2"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/mainFilterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

                    <CheckBox
                        android:id="@+id/searchButton"
                        android:layout_width="65dp"
                        android:layout_height="27dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/filter_checkbox"
                        android:button="@null"
                        android:drawableEnd="@drawable/filter_checkbox_drawable_end"
                        android:drawablePadding="0dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingHorizontal="12dp"
                        android:text="@string/search"
                        android:textColor="@drawable/selector_filter_text"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/clubButton"
                        android:layout_width="65dp"
                        android:layout_height="27dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/filter_checkbox"
                        android:button="@null"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/book_club_kr"
                        android:textColor="@drawable/selector_filter_text"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/sortButton"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/filter_checkbox"
                        android:button="@null"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/sort"
                        android:textColor="@drawable/selector_filter_text"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey5"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/clubListLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/main_blue"
        app:layout_behavior="com.YOUR_PACKAGE_NAMESPACE.TopSheetBehavior"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

    </LinearLayout>
</FrameLayout>
