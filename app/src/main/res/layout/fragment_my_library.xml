<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.library.MyLibraryFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="@string/my_library"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/my_library_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/readTypeTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:tabIndicatorColor="@color/main_blue"
                app:tabSelectedTextColor="@color/main_blue"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/grey2"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/mainFilterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="11dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/searchButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:drawableEnd="@drawable/filter_checkbox_drawable_end"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:text="@string/search"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/clubButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/book_club_kr"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/sortButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/state_check_border_round_blue_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/sort"
                    android:textColor="@drawable/state_checked_text_white_black"
                    android:textSize="10sp" />
            </LinearLayout>

            <FrameLayout
                android:background="@color/grey5"
                android:id="@+id/filterLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/bookListRecyclerView"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey5"
                android:paddingTop="35dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>