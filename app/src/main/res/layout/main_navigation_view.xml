<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/profile_view"
        android:layout_width="match_parent"
        android:layout_height="142.5dp"
        android:background="@drawable/navigation_view_profile_view"
        app:layout_constraintBottom_toTopOf="@+id/navigation_view_tab"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_profile_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/image_view_circle"
        app:layout_constraintBottom_toBottomOf="@+id/profile_view"
        app:layout_constraintEnd_toStartOf="@+id/user_name_tv"
        app:layout_constraintStart_toStartOf="@+id/profile_view" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="이름"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/user_profile_iv"
        app:layout_constraintTop_toTopOf="@+id/user_profile_iv" />

    <TextView
        android:id="@+id/user_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="\@hi06021"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_iv"
        app:layout_constraintStart_toEndOf="@+id/user_profile_iv"
        app:layout_constraintTop_toBottomOf="@+id/user_name_tv" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/navigation_view_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_view"
        app:tabIconTint="@drawable/navigation_view_tab_icon_selector"
        app:tabIndicator="@null"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/light_red"
        app:tabTextAppearance="@style/navigation_view_tab_text"
        app:tabTextColor="@color/grey12" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/navigation_view_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="16dp"
        android:background="#f6f6f6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigation_view_tab" />

</androidx.constraintlayout.widget.ConstraintLayout>