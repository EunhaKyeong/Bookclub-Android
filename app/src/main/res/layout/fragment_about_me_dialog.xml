<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_fragment"
    android:paddingHorizontal="20dp"
    android:paddingTop="16dp"
    tools:context=".view.dialog.AboutMeDialogFragment">

    <TextView
        android:id="@+id/title_about_me_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_change_about_me"
        android:textColor="@color/main_blue"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/msg_about_me_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:src="@drawable/ic_close_pink"
        app:layout_constraintBottom_toBottomOf="@+id/title_about_me_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_about_me_tv" />

    <TextView
        android:id="@+id/msg_about_me_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_input_inside_20"
        android:textColor="@color/main_blue"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/about_me_edit_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_about_me_tv" />


    <View
        android:id="@+id/about_me_edit_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_about_me_et"
        app:layout_constraintBottom_toTopOf="@+id/complete_tv"
        app:layout_constraintTop_toBottomOf="@+id/msg_about_me_tv" />

    <ImageView
        android:id="@+id/plus_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintStart_toStartOf="@+id/about_me_edit_view"
        app:layout_constraintTop_toTopOf="@+id/about_me_edit_view" />

    <EditText
        android:id="@+id/about_me_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@null"
        android:gravity="start"
        android:hint="자기 소개를 입력해주세요."
        android:maxLength="20"
        android:textColor="@color/main_blue"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/about_me_edit_view"
        app:layout_constraintEnd_toEndOf="@+id/about_me_edit_view"
        app:layout_constraintStart_toEndOf="@+id/plus_iv"
        app:layout_constraintTop_toTopOf="@+id/about_me_edit_view" />

    <TextView
        android:id="@+id/complete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/complete"
        android:textColor="@color/grey12"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_me_edit_view" />

</androidx.constraintlayout.widget.ConstraintLayout>