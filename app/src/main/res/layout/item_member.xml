<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/bg_underline_grey">

    <ImageView
        android:id="@+id/user_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/bg_default_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickname_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:text="남아트"
        android:textAppearance="@style/ta_eb_14_kr"
        app:layout_constraintBottom_toTopOf="@+id/club_pres_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/club_pres_tv"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_secondary_75_null_null"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="@string/title_club_pres"
        android:textAppearance="@style/ta_b_8_kr"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/nickname_tv" />

    <TextView
        android:id="@+id/club_mem_tv"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_light_75_null_null"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:text="@string/title_club_mem"
        android:textAppearance="@style/ta_b_8_kr"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/club_pres_tv"
        app:layout_constraintEnd_toEndOf="@+id/club_pres_tv"
        app:layout_constraintStart_toStartOf="@+id/club_pres_tv"
        app:layout_constraintTop_toTopOf="@+id/club_pres_tv" />

    <TextView
        android:id="@+id/introduce_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="책을 같이 읽어보자구~!"
        android:textAppearance="@style/ta_r_10_kr"
        app:layout_constraintBottom_toBottomOf="@+id/club_pres_tv"
        app:layout_constraintEnd_toEndOf="@+id/nickname_tv"
        app:layout_constraintStart_toEndOf="@+id/club_pres_tv"
        app:layout_constraintTop_toTopOf="@+id/club_pres_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>