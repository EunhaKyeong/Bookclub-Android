<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <TextView
        android:id="@+id/login_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/main_blue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginHorizontal="74dp"
        android:background="@drawable/login_book_profile_et"
        android:hint="@string/id"
        android:paddingHorizontal="13dp"
        android:paddingTop="5dp"
        android:textColorHint="@color/grey12"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginHorizontal="74dp"
        android:background="@drawable/login_book_profile_et"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:paddingHorizontal="13dp"
        android:paddingTop="5dp"
        android:textColorHint="@color/grey12"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/login_msg_tv"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="80dp"
        android:textColor="@color/light_red"
        android:textSize="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <android.widget.Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="77dp"
        android:background="@drawable/bg_login_btn"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <View
        android:id="@+id/login_signin_click_view"
        android:layout_width="65dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_signin_tv"
        app:layout_constraintEnd_toEndOf="@+id/login_signin_tv"
        app:layout_constraintStart_toStartOf="@+id/login_signin_tv"
        app:layout_constraintTop_toTopOf="@+id/login_signin_tv" />

    <TextView
        android:id="@+id/login_signin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:text="@string/sign_in"
        android:textColor="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_signin_find_password_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

    <View
        android:id="@+id/login_signin_find_password_line"
        android:layout_width="1dp"
        android:layout_height="11dp"
        android:layout_marginHorizontal="6dp"
        android:background="@color/grey12"
        app:layout_constraintBottom_toBottomOf="@+id/login_signin_tv"
        app:layout_constraintEnd_toStartOf="@+id/login_find_password_tv"
        app:layout_constraintStart_toEndOf="@+id/login_signin_tv"
        app:layout_constraintTop_toTopOf="@+id/login_signin_tv" />

    <View
        android:id="@+id/login_find_password_click_view"
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_find_password_tv"
        app:layout_constraintEnd_toEndOf="@+id/login_find_password_tv"
        app:layout_constraintStart_toStartOf="@+id/login_find_password_tv"
        app:layout_constraintTop_toTopOf="@+id/login_find_password_tv" />

    <TextView
        android:id="@+id/login_find_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="121dp"
        android:text="@string/find_password"
        android:textColor="@color/grey12"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_signin_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_signin_find_password_line"
        app:layout_constraintTop_toTopOf="@+id/login_signin_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>