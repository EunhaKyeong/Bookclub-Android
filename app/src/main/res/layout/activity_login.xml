<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <TextView
        android:id="@+id/login_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/main_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="253dp"
        android:layout_height="31dp"
        android:background="@drawable/login_book_profile_et"
        android:hint="@string/id"
        android:paddingHorizontal="15.6dp"
        android:paddingTop="5dp"
        android:textColorHint="@color/grey12"
        android:textSize="14.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="253dp"
        android:layout_height="31dp"
        android:background="@drawable/login_book_profile_et"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingHorizontal="15.6dp"
        android:paddingTop="5dp"
        android:textColorHint="@color/grey12"
        android:textSize="14.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/light_red"
        android:text="@string/login"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />

    <View
        android:id="@+id/login_social_line_left"
        android:layout_width="62.4dp"
        android:layout_height="1.2dp"
        android:layout_marginEnd="4dp"
        android:background="@color/grey12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_social_tv"
        app:layout_constraintEnd_toStartOf="@+id/login_social_tv"
        app:layout_constraintTop_toTopOf="@+id/login_social_tv" />

    <TextView
        android:id="@+id/login_social_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/social_login"
        android:textColor="@color/grey12"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <View
        android:id="@+id/login_social_line_right"
        android:layout_width="62.4dp"
        android:layout_height="1.2dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_social_tv"
        app:layout_constraintStart_toEndOf="@+id/login_social_tv"
        app:layout_constraintTop_toTopOf="@+id/login_social_tv" />

    <ImageView
        android:id="@+id/login_naver_iv"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:layout_marginStart="77dp"
        android:src="@drawable/naver"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_kakao_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <ImageView
        android:id="@+id/login_kakao_iv"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:src="@drawable/kakao"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_naver_iv"
        app:layout_constraintEnd_toStartOf="@+id/login_facebook_iv"
        app:layout_constraintStart_toEndOf="@+id/login_naver_iv"
        app:layout_constraintTop_toTopOf="@+id/login_naver_iv" />

    <ImageView
        android:id="@+id/login_facebook_iv"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:src="@drawable/facebook"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_naver_iv"
        app:layout_constraintEnd_toStartOf="@+id/login_google_iv"
        app:layout_constraintStart_toEndOf="@+id/login_kakao_iv"
        app:layout_constraintTop_toTopOf="@+id/login_naver_iv" />

    <ImageView
        android:id="@+id/login_google_iv"
        android:layout_width="43.2dp"
        android:layout_height="43.2dp"
        android:layout_marginEnd="77dp"
        android:src="@drawable/google"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_naver_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_facebook_iv"
        app:layout_constraintTop_toTopOf="@+id/login_naver_iv" />

    <TextView
        android:id="@+id/login_signin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:text="@string/sign_in"
        android:textColor="@color/grey12"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_signin_find_password_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <View
        android:id="@+id/login_signin_find_password_line"
        android:layout_width="1.2dp"
        android:layout_height="13.2dp"
        android:layout_marginHorizontal="6dp"
        android:background="@color/grey12"
        app:layout_constraintBottom_toBottomOf="@+id/login_signin_tv"
        app:layout_constraintEnd_toStartOf="@+id/login_find_password_tv"
        app:layout_constraintStart_toEndOf="@+id/login_signin_tv"
        app:layout_constraintTop_toTopOf="@+id/login_signin_tv" />

    <TextView
        android:id="@+id/login_find_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="121dp"
        android:text="@string/find_password"
        android:textColor="@color/grey12"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_signin_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_signin_find_password_line"
        app:layout_constraintTop_toTopOf="@+id/login_signin_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>