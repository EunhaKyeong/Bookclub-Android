<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.library.BookDetailFragment">

    <View
        android:id="@+id/back_iv_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/back_iv"
        app:layout_constraintEnd_toEndOf="@id/back_iv"
        app:layout_constraintStart_toStartOf="@+id/back_iv"
        app:layout_constraintTop_toTopOf="@+id/back_iv" />

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28.8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/delete_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/delete_btn" />

    <TextView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.4dp"
        android:layout_marginTop="21.6dp"
        android:layout_marginEnd="28.8dp"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/light_red"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_btn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/book_iv"
                android:layout_width="93dp"
                android:layout_height="132dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/book_desc_book_iv"
                android:scaleType="fitXY"
                android:src="@drawable/book_ex"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/book_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:text="공간의 미래 (유현준)"
                android:textColor="@color/main_blue"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_iv" />

            <TextView
                android:id="@+id/category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reading"
                android:textColor="@color/grey12"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/category_btn"
                app:layout_constraintStart_toStartOf="@+id/category_btn"
                app:layout_constraintTop_toTopOf="@+id/category_btn" />

            <android.widget.Button
                android:id="@+id/category_btn"
                android:layout_width="89dp"
                android:layout_height="26dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_book_desc_category_after_btn"
                android:drawableRight="@drawable/ic_read_after"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="4dp"
                android:text="@string/read_complete"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/go_record_btn"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_tv" />

            <android.widget.Button
                android:id="@+id/go_record_btn"
                android:layout_width="122dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_book_desc_go_record_btn"
                android:drawableRight="@drawable/ic_write"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="4dp"
                android:text="@string/go_post"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/category_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/category_btn"
                app:layout_constraintTop_toTopOf="@+id/category_btn" />

            <View
                android:id="@+id/memo_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="48dp"
                android:background="@color/grey15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_btn" />

            <TextView
                android:id="@+id/memo_list_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:text="@string/memo_list"
                android:textColor="@color/main_blue"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/memo_list_view"
                app:layout_constraintTop_toTopOf="@+id/memo_list_view" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/memo_list_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:overScrollMode="never"
                android:paddingBottom="15dp"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/memo_list_tv"
                tools:listitem="@layout/item_post" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>