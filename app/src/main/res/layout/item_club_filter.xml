<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/club_cb"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:minWidth="84dp"
        android:paddingStart="5dp"
        android:paddingEnd="20dp"
        android:background="@drawable/selector_club_filter_cb"
        android:textColor="@drawable/selector_club_filter_cb_text"
        android:textAppearance="@style/ta_r_10_kr"
        android:button="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/club_check_iv"
        android:layout_width="8dp"
        android:layout_height="7dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_check_primary"
        app:layout_constraintTop_toTopOf="@+id/club_cb"
        app:layout_constraintEnd_toEndOf="@+id/club_cb"
        app:layout_constraintBottom_toBottomOf="@+id/club_cb" />

</androidx.constraintlayout.widget.ConstraintLayout>