<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.write.RecordScopeBottomSheetFragment">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/record_scope_title"
        android:textColor="@color/main_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/grey13"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <include
        android:id="@+id/my_library_layout"
        layout="@layout/record_scope_club_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/club_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/club_rv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@id/my_library_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_library_layout"
        app:layout_constraintTop_toTopOf="@id/my_library_layout" />

    <Button
        android:id="@+id/record_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="27dp"
        android:text="@string/record_kr"
        android:textColor="@color/main_blue"
        android:textSize="14sp"
        android:textStyle="bold"
        android:stateListAnimator="@null"
        app:backgroundTint="@color/grey13"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/club_rv" />

</androidx.constraintlayout.widget.ConstraintLayout>