<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.book_profile.ExpressMeFragment">

    <TextView
        android:id="@+id/set_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/express_me_title"
        android:textColor="@color/main_blue"
        android:textSize="21.6sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/express_me_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16.8dp"
        android:background="@drawable/login_book_profile_et"
        android:hint="@string/express_me_hint"
        android:maxLength="30"
        android:paddingHorizontal="12dp"
        android:textColor="@color/main_blue"
        android:textColorHint="@color/grey12"
        android:textSize="16.8sp" />

</LinearLayout>