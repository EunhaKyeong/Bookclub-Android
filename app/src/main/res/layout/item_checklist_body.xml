<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11dp">

    <View
        android:id="@+id/checklist_view"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/checklist_item_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/checked_iv"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_checked"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintStart_toStartOf="@+id/checklist_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />

    <TextView
        android:id="@+id/checklist_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/light_blue"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintEnd_toStartOf="@+id/remove_iv"
        app:layout_constraintStart_toEndOf="@+id/checked_iv"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:src="@drawable/ic_close_pink"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintEnd_toEndOf="@id/checklist_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />
</androidx.constraintlayout.widget.ConstraintLayout>