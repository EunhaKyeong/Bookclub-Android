<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="13.2dp">

    <View
        android:id="@+id/checklist_view"
        android:layout_width="0dp"
        android:layout_height="28.8dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/checklist_item_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checklist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:textColor="@color/light_blue"
        android:textSize="14.4sp"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintStart_toStartOf="@+id/checklist_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8.4dp"
        android:src="@drawable/close_icon_light_red"
        app:layout_constraintBottom_toBottomOf="@+id/checklist_view"
        app:layout_constraintEnd_toEndOf="@id/checklist_view"
        app:layout_constraintTop_toTopOf="@+id/checklist_view" />
</androidx.constraintlayout.widget.ConstraintLayout>