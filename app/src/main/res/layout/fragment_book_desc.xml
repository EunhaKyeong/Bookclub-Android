<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.library.BookDescFragment">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28.8dp"
        android:src="@drawable/back_icon_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/book_name_tv"
        app:layout_constraintBottom_toBottomOf="@+id/book_name_tv"/>

    <TextView
        android:id="@+id/book_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.4dp"
        android:layout_marginEnd="28.8dp"
        android:gravity="center"
        android:text="공간의 미래(유한준)"
        android:textColor="@color/main_blue"
        android:textSize="21.6sp"
        android:textStyle="bold"
        android:layout_marginTop="21.6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_iv" />

    <View
        android:id="@+id/book_desc_all_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="26.4dp"
        android:background="@drawable/layout_gradation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_name_tv"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-116dp" />

    <ImageView
        android:id="@+id/book_iv"
        android:layout_width="148dp"
        android:layout_height="217dp"
        android:layout_marginTop="52.8dp"
        android:background="@drawable/book_desc_book_iv"
        android:scaleType="fitXY"
        android:src="@drawable/book_ex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/book_desc_all_view" />

    <View
        android:id="@+id/read_complete_view"
        android:layout_width="80.4dp"
        android:layout_height="30dp"
        android:layout_marginStart="14.4dp"
        android:background="@drawable/book_desc_read_complete_view"
        app:layout_constraintBottom_toBottomOf="@+id/book_iv"
        app:layout_constraintStart_toEndOf="@+id/book_iv" />

    <ImageView
        android:id="@+id/read_complete_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.4dp"
        android:src="@drawable/read_complete_icon"
        app:layout_constraintBottom_toBottomOf="@id/read_complete_view"
        app:layout_constraintStart_toStartOf="@id/read_complete_view"
        app:layout_constraintTop_toTopOf="@id/read_complete_view" />

    <TextView
        android:id="@+id/read_complete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14.4dp"
        android:text="@string/end"
        android:textColor="@color/white"
        android:textSize="14.4sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/read_complete_view"
        app:layout_constraintEnd_toEndOf="@id/read_complete_view"
        app:layout_constraintTop_toTopOf="@+id/read_complete_view" />

    <View
        android:id="@+id/memo_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="50.4dp"
        android:layout_marginBottom="22.8dp"
        android:background="@drawable/book_desc_memo_list_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_complete_view" />

    <TextView
        android:id="@+id/memo_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.76dp"
        android:layout_marginTop="9.312dp"
        android:text="@string/memo_list"
        android:textColor="@color/main_blue"
        android:textSize="14.4sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/memo_list_view"
        app:layout_constraintTop_toTopOf="@+id/memo_list_view" />

    <ScrollView
        android:id="@+id/memo_list_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="19.2dp"
        android:layout_marginTop="14.4dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/memo_list_view"
        app:layout_constraintEnd_toEndOf="@+id/memo_list_view"
        app:layout_constraintStart_toStartOf="@+id/memo_list_view"
        app:layout_constraintTop_toBottomOf="@+id/memo_list_title_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memo_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_post" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>